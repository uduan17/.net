@model Microsoft.AspNetCore.Identity.IdentityRole

@{ ViewData["Title"] = "Roles"; }

<div class="container mt-5">
    <div class="row mt-5">
        <div class="mx-auto mt-5">
            <div class="col-lg-12 shadow p-3">
                <h1>Crear un Rol</h1>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="textdanger"></div>
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input type="text" id="role" name="role" asp-for="Name" class="form-control" placeholder="Entre el nombre del rol" />
                        <span asp-validation-for="Name" class="textdanger"></span>
                    </div>
                    <center>
                        <div class="form-group">
                            <input type="submit" value=" Crear " class="btn btn-outline-info" />
                            <a class="btn btn-outline-danger" aspaction="DisplayRoles">Cancelar</a>
                        </div>
                    </center>
                </form>
            </div>
        </div>
    </div>
</div>
