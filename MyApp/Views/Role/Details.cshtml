@model List<string>
@{ ViewData["Title"] = "Detalle"; }
<h3 class="text-center">Usuario: <b>@ViewBag.UserName</b></h3>
<hr />
<div class="container">
    <div class="row">
        <div class="mx-auto">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-12">
                        @if (Model.Count == 0)
                        {
                            <p>Este usuario no tiene roles</p> }
                        else
                        {
                            <h1 class="text-center">Roles</h1>
                            <table class="table table-striped table-bordered">
                                <thead class="bg-success text-white">
                                    <tr>
                                        <th>Rol</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var r in Model)
                                    {
                                        <tr>
                                            <td>@r</td>
                                            <td>
                                                <a class="btn btn-outline-danger"
                                                   asp-route-role="@r" asp-route-userName="@ViewBag.UserName" asp-action="RemoveUserRole" onclick="return confirm('¿Estáseguro de eliminar el rol del usuario?')">Eliminar Rol</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
