@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager 
@inject UserManager<IdentityUser> UserManager 

<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="" style="color:white;">Hola, @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="LogoutForm" method="post" class="form-inline" asp-controller="Cuentas" asp-action="SalirAplicacion">
                <button type="submit" class="btn nav-link" style="color:white;">Salir</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item text-light">
            <a class="nav-link text-dark" asp-area="" asp-controller="Cuentas" asp-action="Registro" style="color:white;">Registrarse</a>
        </li>
        <li class="nav-item text-light">
            <a class="nav-link text-dark" asp-area="" asp-controller="Cuentas" asp-action="Acceso" style="color:white;">Acceder</a>
        </li>
    }
</ul> 
